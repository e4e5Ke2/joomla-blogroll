<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_blogroll</name>
	<author>Alexander Bach</author>
	<creationDate>2025-07</creationDate>
	<copyright>(C) 2005 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bachalex86@gmail.com</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0.0</version>
	<description>MOD_BLOGROLL_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\Blogroll</namespace>
	<files>
		<folder module="mod_blogroll">services</folder>
		<folder>src</folder>
		<folder>src\Helper</folder>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<administration>
		<files>
			<folder>language</folder>
		</files>
	</administration>
	<languages>
		<language tag="en-GB">language/en-GB/mod_blogroll.ini</language>
		<language tag="en-GB">language/en-GB/mod_blogroll.sys.ini</language>
		<language tag="de-DE">language/de-DE/mod_blogroll.ini</language>
		<language tag="de-DE">language/de-DE/mod_blogroll.sys.ini</language>
	</languages>
	<media destination="mod_blogroll" folder="media">
		<filename>joomla.asset.json</filename>
		<folder>js</folder>
	</media>
	<help key="Site_Modules:_Blogroll_Display" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="rssurl_list"
					type="textarea"
					label="MOD_BLOGROLL_FIELD_RSSURL_LABEL"
					required="true"
					rows="10"
					cols="5"
					hint="Enter feed URLs here. Every URL should go into a new line. E.g.:&#xD;&#xD;https://feed1.com&#xD;https://feed2.com&#xD;https://feed3.com"
				/>

				<field
					name="rsssorting"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="Sort by recency"
					default="1"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="rsstitle"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_RSSTITLE_LABEL"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssdesc"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_DESCRIPTION_LABEL"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssdate"
					type="radio"
					label="MOD_BLOGROLL_FIELD_DATE_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="rssimage"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_IMAGE_LABEL"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssitems"
					type="number"
					label="MOD_BLOGROLL_FIELD_ITEMS_LABEL"
					default="5"
					filter="integer"
					min="1"
					validate="number"
				/>

				<field
					name="rssitemdesc"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_ITEMDESCRIPTION_LABEL"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssitemdate"
					type="radio"
					label="MOD_BLOGROLL_FIELD_ITEMDATE_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="word_count"
					type="text"
					label="MOD_BLOGROLL_FIELD_WORDCOUNT_LABEL"
					description="MOD_BLOGROLL_FIELD_WORDCOUNT_DESC"
					default="0"
					filter="integer"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>