<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
	<name>mod_blogroll</name>
	<author>Alexander Bach</author>
	<creationDate>2025-07</creationDate>
	<copyright>(C) 2005 Open Source Matters, Inc.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bachalex86@gmail.com</authorEmail>
	<authorUrl>web</authorUrl>
	<version>1.0.0</version>
	<description>MOD_BLOGROLL_XML_DESCRIPTION</description>
	<namespace path="src">My\Module\Blogroll</namespace>
	<files>
		<folder module="mod_blogroll">services</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<files>
		<folder>language</folder>
	</files> or <administration>
		<files>
			<folder>language</folder>
		</files>
	</administration>
	<media
		destination="mod_blogroll" folder="media">
		<filename>joomla.asset.json</filename>
		<folder>js</folder>
		<folder>css</folder>
	</media>
	<help key="Site_Modules:_Blogroll_Display" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					addfilterprefix="My\Module\Blogroll\Site\Helper"
					name="rssurl_list"
					type="textarea"
					label="MOD_BLOGROLL_FIELD_RSSURL_LABEL"
					description='this is a description'
					required="true"
					rows="10"
					cols="5"
					filter="rss"
					hint="MOD_BLOGROLL_FIELD_RSSURL_HINT"
				/>

				<field
					name="rsssorting"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_SORTING_LABEL"
					default="1"
					filter="integer">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="rssimage"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_IMAGE_LABEL"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssauthor"
					type="radio"
					label="MOD_BLOGROLL_FIELD_AUTHOR_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="1"
					filter="integer"
				>
					<option value="0">JHIDE</option>
					<option value="1">JSHOW</option>
				</field>

				<field
					name="rssitemdate"
					type="list"
					default="1"
					label="MOD_BLOGROLL_FIELD_DATE_LABEL">
					<option value="0">MOD_BLOGROLL_FIELD_DATE_FORMAT_OPTION_0</option>
					<option value="1">MOD_BLOGROLL_FIELD_DATE_FORMAT_OPTION_1</option>
					<option value="2">MOD_BLOGROLL_FIELD_DATE_FORMAT_OPTION_2</option>
					<option value="3">MOD_BLOGROLL_FIELD_DATE_FORMAT_OPTION_3</option>
				</field>

				<field
					name="rssitems_limit"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					label="MOD_BLOGROLL_FIELD_ITEMS_LIMIT_LABEL"
					default="0"
					filter="integer">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="rssitems_limit_count"
					type="number"
					label="MOD_BLOGROLL_FIELD_ITEMS_LIMIT_COUNT_LABEL"
					default="5"
					filter="integer"
					min="1"
					validate="number"
				/>

			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="form-select"
					validate="moduleLayout"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
					validate="CssIdentifier"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					validate="options"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>
				
				<field
					name="rss_timeout"
					type="number"
					label="MOD_BLOGROLL_FIELD_TIMEOUT_LABEL"
					default="5"
					min="1"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>